<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/movie_fragment_header"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Include the youtube thumbnail for Trailer of the movie -->
    <RelativeLayout
        android:id="@+id/movie_fragment_header_vedio"
        android:layout_width="fill_parent"
        android:layout_height="200dp">

        <!-- ImageView or your Thumbnail -->
        <ImageView
            android:id="@+id/movie_fragment_header_vedio_img"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitXY" />

        <!-- ImageView of your button -->
        <ImageView
            android:id="@+id/movie_fragment_header_vedio_play"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:src="@drawable/play" />

        <!-- TextView to display no trailer Msg -->
        <TextView
            android:id="@+id/movie_fragment_header_vedio_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/movie_fragment_header_vedio_play"
            android:layout_centerInParent="true"
            android:textColor="@color/primaryTextColor"
            android:textStyle="bold" />

    </RelativeLayout>

    <!-- Include the Movie content details -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/movie_fragment_header_poster"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_marginRight="10dp"
            android:scaleType="fitStart"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/movie_fragment_header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@id/movie_fragment_header_poster"
            android:fontFamily="sans-serif-medium"
            android:textAppearance="@android:style/TextAppearance.Material.Body2"
            android:textColor="@color/primaryTextColor"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/movie_fragment_header_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/movie_fragment_header_title"
            android:layout_alignBottom="@+id/movie_fragment_header_title"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" />

        <TextView
            android:id="@+id/movie_fragment_header_release_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/movie_fragment_header_title"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/movie_fragment_header_poster"
            android:fontFamily="sans-serif-medium"
            android:textAppearance="@android:style/TextAppearance.Material.Body1"
            android:textColor="@color/primaryTextColor" />

        <View
            android:id="@+id/movie_fragment_header_separatorOne"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@id/movie_fragment_header_poster"
            android:layout_marginTop="10dp"
            android:background="@color/divider" />

        <RatingBar
            android:id="@+id/movie_fragment_header_rating"
            style="?android:attr/ratingBarStyleIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/movie_fragment_header_separatorOne"
            android:layout_marginTop="10dp"
            android:isIndicator="true"
            android:numStars="5"
            android:stepSize="0.1" />

        <View
            android:id="@+id/movie_fragment_header_separatorTwo"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@id/movie_fragment_header_rating"
            android:layout_marginTop="10dp"
            android:background="@color/divider" />

        <TextView
            android:id="@+id/movie_fragment_header_overview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/movie_fragment_header_separatorTwo"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-medium"
            android:textAppearance="@android:style/TextAppearance.Material.Body1"
            android:textColor="@color/primaryTextColor" />
    </RelativeLayout>

</LinearLayout>